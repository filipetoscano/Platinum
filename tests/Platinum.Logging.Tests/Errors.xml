<?xml version="1.0" encoding="utf-8"?>
<errors xmlns="urn:platinum/actor" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:platinum/actor ../../src/Platinum.Schema/PlatinumResxError.xsd">
    <actor base="{Application}" />

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    ~
    ~ Event for Auditor
    ~
    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <event id="NoArguments" actor="~.Tests" code="1001">
        <description>Event_NoArguments: Without arguments.</description>
    </event>

    <event id="OneArgument" actor="~.Tests" code="1002">
        <description>Event_OneArgument: With a single argument '{0}'.</description>
        <arg name="Arg1" />
    </event>

    <event id="TwoArguments" actor="~.Tests" code="1003">
        <description>Event_TwoArguments: With two arguments: '{0}' and '{1}'.</description>
        <arg name="Arg1" />
        <arg name="Arg2" />
    </event>

    <event id="Fatal" actor="~.Tests" code="1004" level="Fatal">
        <description>Event_Fatal: Log level = Fatal.</description>
    </event>

    <event id="Exception" actor="~.Tests" code="1005" level="Error">
        <description>Event_Exception: Log level = Error and has inner exception.</description>
    </event>

    <event id="ExceptionAndArguments" actor="~.Tests" code="1006">
        <description>Event_ExceptionAndArguments: With two arguments: '{0}' and '{1}', and has inner exception.</description>
        <arg name="Arg1" />
        <arg name="Arg2" />
    </event>


    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    ~
    ~ Exception for Logger
    ~
    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <error id="Exception_NoArguments" actor="~.Tests" code="2001">
        <description>Error_ActorException: Without arguments.</description>
    </error>

</errors>