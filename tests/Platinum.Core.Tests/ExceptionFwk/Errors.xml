<?xml version="1.0" encoding="utf-8"?>
<errors xmlns="urn:platinum/actor">
    <actor base="{Application}" />

    <error id="Count0" actor="~" code="1000">
        <description>Message with no placeholders.</description>
    </error>

    <error id="Count1" actor="~" code="1001">
        <description>Message with single placeholder: {0}.</description>
        <arg name="Arg1" />
    </error>

    <error id="Count1X" actor="~" code="2001">
        <description>Message with single placeholder: {0} -- but no args.</description>
    </error>

    <error id="Count2" actor="~" code="1002">
        <description>Message with two placeholders: {0} - {1}.</description>
        <arg name="Arg1" />
        <arg name="Arg2" />
    </error>

</errors>